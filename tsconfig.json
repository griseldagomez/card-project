{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "allowJs": false,
        "moduleResolution": "NodeNext",
        "declaration": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "baseUrl": "./",
        "outDir": "./assets/dist",
        "paths": {
            "@styles/*": ["scss/*"]
        },
        "jsx": "react",
    },
    "include": ["./assets/react/**/*.ts", "./assets/react/**/*.tsx"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
